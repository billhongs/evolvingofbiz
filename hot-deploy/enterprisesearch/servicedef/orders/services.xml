<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Enterpise Solr search Services</description>
    <vendor></vendor>
    <version>1.0</version>

<!-- Order related services -->
    <!-- Create indexes in solr for all past Orders. -->
    <service name="createOrderIndex" engine="java" auth="true"
            location="org.ofbiz.orders.OrderServices" invoke="createOrderIndex">
        <description>Create Order Indexes</description>
        <attribute name="orderId" type="String" mode="IN" optional="false"/>
    </service>
    <service name="createOrdersIndex" engine="java" auth="true" require-new-transaction="true"
            location="org.ofbiz.orders.OrderServices" invoke="createOrdersIndex" transaction-timeout="7200">
        <description>Create Orders Indexes</description>
        <attribute name="unCommittedDocsLimit" type="Integer" mode="IN" optional="true"/>
    </service>
    <service name="getOrderSearchFacets" engine="groovy"
            location="component://enterprisesearch/script/orders/OrderSearch.groovy" invoke="getOrderSearchFacets" auth="false">
        <description>Service will provide every required information which is needed to display at Order Search part of Find Order page.</description>
        <attribute name="keyword" mode="IN" type="String" optional="true"/>
        <attribute name="days" mode="IN" type="String" optional="true"/>
        <attribute name="status" mode="IN" type="String" optional="true"/>
        <attribute name="channel" mode="IN" type="String" optional="true"/>
        <attribute name="customer" mode="IN" type="String" optional="true"/>
        <attribute name="result" mode="OUT" type="Map" optional="false"/>
    </service>
    <service name="searchOrderByFilters" engine="groovy"
            location="component://enterprisesearch/script/orders/OrderSearch.groovy" invoke="searchOrderByFilters" auth="false">
        <description>Service will provide every required information which is needed to display at facet part of Find Order page.</description>
        <attribute name="keyword" mode="IN" type="String" optional="true"/>
        <attribute name="days" mode="IN" type="String" optional="true"/>
        <attribute name="status" mode="IN" type="String" optional="true"/>
        <attribute name="channel" mode="IN" type="String" optional="true"/>
        <attribute name="customer" mode="IN" type="String" optional="true"/>
        <attribute name="viewSize" mode="IN" type="String" optional="true"/>
        <attribute name="viewIndex" mode="IN" type="String" optional="true"/>
        <attribute name="result" mode="OUT" type="Map" optional="false"/>
    </service>
    <service name="searchOrderPageDetails" engine="simple"
            location="component://enterprisesearch/script/ErpAppServices.xml" invoke="searchOrderPageDetails" auth="false">
        <description>Service will provide every required information which is needed to display at Order Search page.</description>
        <attribute name="keyword" mode="IN" type="String" optional="true"/>
        <attribute name="days" mode="IN" type="String" optional="true"/>
        <attribute name="status" mode="IN" type="String" optional="true"/>
        <attribute name="channel" mode="IN" type="String" optional="true"/>
        <attribute name="customer" mode="IN" type="String" optional="true"/>
        <attribute name="viewSize" mode="IN" type="String" optional="true"/>
        <attribute name="viewIndex" mode="IN" type="String" optional="true"/>
        <attribute name="result" mode="OUT" type="Map" optional="false"/>
    </service>
</services>