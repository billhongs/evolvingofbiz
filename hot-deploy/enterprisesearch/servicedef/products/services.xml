<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Enterpise Solr search Services</description>
    <vendor></vendor>
    <version>1.0</version>
    <service name="createProductIndex" engine="java" auth="true"
            location="org.ofbiz.products.ProductServices" invoke="createProductIndex">
        <description>Create Index for single product.</description>
        <attribute name="productId" type="String" mode="IN" optional="true"/>
    </service>
    <service name="createProductsIndex" engine="java" auth="true" require-new-transaction="true"
            location="org.ofbiz.products.ProductServices" invoke="createProductsIndex" transaction-timeout="7200">
        <description>Create Indexes for all the products.</description>
        <attribute name="unCommittedDocsLimit" type="Integer" mode="IN" optional="true"/>
    </service>
    <service name="getProductSearchFacets" engine="groovy"
            location="component://enterprisesearch/script/products/ProductSearch.groovy" invoke="getProductSearchFacets" auth="false">
        <description>Service will provide every required information for facets on Find Product page.</description>
        <attribute name="keyword" mode="IN" type="String" optional="true"/>
        <attribute name="webSiteId" mode="IN" type="String" optional="true"/>
        <attribute name="price" mode="IN" type="String" optional="true"/>
        <attribute name="cat" mode="IN" type="String" optional="true"/>
        <attribute name="result" mode="OUT" type="Map" optional="false"/>
    </service>
    <service name="getProductSearchResults" engine="groovy"
            location="component://enterprisesearch/script/products/ProductSearch.groovy" invoke="getProductSearchResults" auth="false">
        <description>Service will provide every required information for Search part of Find Product page.</description>
        <attribute name="keyword" mode="IN" type="String" optional="true"/>
        <attribute name="webSiteId" mode="IN" type="String" optional="true"/>
        <attribute name="price" mode="IN" type="String" optional="true"/>
        <attribute name="cat" mode="IN" type="String" optional="true"/>
        <attribute name="viewSize" mode="IN" type="String" optional="true"/>
        <attribute name="viewIndex" mode="IN" type="String" optional="true"/>
        <attribute name="result" mode="OUT" type="Map" optional="false"/>
    </service>
</services>