<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Enterpise Solr search Services</description>
    <vendor></vendor>
    <version>1.0</version>

<!-- Enterprise Search. -->
    <service name="getEnterpriseSearchResults" engine="groovy" auth="false"
                location="component://enterprisesearch/script/EnterpriseSearch.groovy" invoke="getEnterpriseSearchResults">
        <description>Service will provide all the results from through out the application.</description>
        <attribute name="keyword" mode="IN" type="String" optional="false"/>
        <attribute name="result" mode="OUT" type="Map" optional="true"/>
    </service>
    <service name="createIndexForAllSchema" engine="group" auth="true" transaction-timeout="7200"  >
        <description>Create Indexes in solr for order, Customers, CMS WebPages and Categories </description>
        <group>
            <invoke name="createPartiesIndex" />
            <invoke name="createOrdersIndex" />
            <invoke name="createProductsIndex" />
            <invoke name="createShipmentsIndex" />
            <invoke name="createReturnsIndex" />
        </group>
    </service>
</services>