<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

     <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="ExampleUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="parameters.menuContentId" from-field="menuContentId" default-value="MAIN_MENU"/>

                <property-to-field resource="general.properties" property="ORGANIZATION_PARTY" field="organizationPartyId"/>
                <entity-one value-field="organizationParty" entity-name="PartyGroup">
                    <field-map field-name="partyId" from-field="organizationPartyId"/>
                </entity-one>
                <set field="layoutSettings.companyName" from-field="organizationParty.groupName" global="true"/>
                <set field="logoImageUrl" from-field="organizationParty.logoImageUrl" default-value="/images/ofbiz_logo.gif"/>
                <entity-and entity-name="WebSiteContent" list="webSiteLogoContents" filter-by-date="true">
                    <field-map field-name="webSiteId" from-field="websiteId"/>
                    <field-map field-name="webSiteContentTypeId" value="LOGO_IMAGE"/>
                </entity-and>
                <set field="webSiteLogoContent" value="${groovy: org.ofbiz.entity.util.EntityUtil.getFirst(webSiteLogoContents)}"/>

                <entity-and entity-name="WebSiteContent" list="webSiteFaviconContents" filter-by-date="true">
                    <field-map field-name="webSiteId" from-field="websiteId"/>
                    <field-map field-name="webSiteContentTypeId" value="FAVICON_ICON"/>
                </entity-and>
                <set field="webSiteFaviconContent" value="${groovy: org.ofbiz.entity.util.EntityUtil.getFirst(webSiteFaviconContents)}"/>
                <script location="component://example/webapp/example/WEB-INF/actions/UpdatePreferences.groovy"/>
                <!-- Pre and Post body location will be used by uif decorator  -->
                <set field="preBodyLocation" value="component://example/webapp/example/includes/PreBody.ftl"/>
                <set field="postBodyLocation" value="component://example/webapp/example/includes/PostBody.ftl"/>
            </actions>
            <widgets>
                <include-screen name="UifDecorator" location="${parameters.UifDecoratorLocation}"/>
            </widgets>
        </section>
    </screen>

    <screen name="ExampleCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="EXAMPLE" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.ExampleViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="ExampleCommonAjaxDecorator">
        <section>
            <actions>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="ExampleUiLabels" map-name="uiLabelMap" global="true"/>
            </actions>
            <widgets>
                <platform-specific><html><html-template location="component://example/webapp/example/includes/PreBody.ftl"/></html></platform-specific>
                <decorator-section-include name="body"/>
                <platform-specific><html><html-template location="component://example/webapp/example/includes/PostBody.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>
    <screen name="Login">
        <section>
            <actions>
                <set field="titleProperty" value="CommonLogin"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container style="row">
                            <container style="col-lg-6 col-md-6 col-sm-6">
                                <platform-specific><html><html-template location="component://example/webapp/example/includes/Login.ftl"/></html></platform-specific>
                            </container>
                            <container style="col-lg-6 col-md-6 col-sm-6">
                                <platform-specific><html><html-template location="component://example/webapp/example/includes/ForgotPassword.ftl"/></html></platform-specific>
                            </container>
                        </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="RequirePasswordChange">
        <section>
            <actions>
                <set field="titleProperty" value="ChangePassword"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
                            <html><html-template location="component://example/webapp/example/includes/ChangePassword.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="SetUserPreference">
        <section>
            <actions>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                 <script location="component://example/webapp/example/WEB-INF/actions/UpdatePreferences.groovy"/>
            </actions>
            <widgets>
                <platform-specific><html><html-template location="component://example/webapp/example/includes/UpdatePreferences.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>
    <screen name="Messages">
        <section>
            <actions>
                <script location="component://example/webapp/example/WEB-INF/actions/Messages.groovy"/>
            </actions>
            <widgets>
                <container style="messages">
                    <platform-specific><html><html-template location="component://example/webapp/example/includes/Messages.ftl"/></html></platform-specific>
                </container>
            </widgets>
        </section>
    </screen>
</screens>