<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="FindExample">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleFindExamples"/>
                <set field="headerItem" value="Example"/>
                <script location="component://example/webapp/example/WEB-INF/actions/GetExampleSearchFacets.groovy"/>
                <script location="component://example/webapp/example/WEB-INF/actions/SearchExamplesByFilters.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="ExampleCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
                            <html><html-template location="component://example/webapp/example/example/FindExampleContainer.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="ListExamples">
        <section>
            <actions>
                <set field="titleProperty" value="Examples"/>
                <property-map resource="ExampleUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <script location="component://example/webapp/example/WEB-INF/actions/GetExampleSearchFacets.groovy"/>
                <script location="component://example/webapp/example/WEB-INF/actions/SearchExamplesByFilters.groovy"/>
            </actions>
            <widgets>
                <platform-specific>
                    <html><html-template location="component://example/webapp/example/example/ListExamples.ftl"/></html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
    <screen name="CreateExample">
        <section>
            <actions>
                <set field="titleProperty" value="ExampleCreateExample"/>
                <set field="headerItem" value="CreateExample"/>
                <entity-condition entity-name="ExampleType" list="exampleTypes"/>
                <entity-and entity-name="StatusItem" list="statusItems">
                    <field-map field-name="statusTypeId" value="EXAMPLE_STATUS"/>
                </entity-and>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
                            <html><html-template location="component://example/webapp/example/example/CreateExample.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="EditExample">
        <section>
            <actions>
                <property-map resource="ExampleUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="exampleId" from-field="parameters.exampleId"/>
                <entity-one entity-name="Example" value-field="example"/>
                <entity-condition entity-name="ExampleType" list="exampleTypes"/>
                <entity-and entity-name="StatusItem" list="statusItems">
                    <field-map field-name="statusTypeId" value="EXAMPLE_STATUS"/>
                </entity-and>
            </actions>
            <widgets>
                <platform-specific>
                    <html><html-template location="component://example/webapp/example/example/EditExample.ftl"/></html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
    <screen name="ViewExample">
        <section>
            <actions>
                <set field="titleProperty" value="${parameters.exampleId}"/>
                <set field="previousTitleProperty" value="Examples"/>
                <set field="previousUrl" value="main"/>
                <set field="headerItem" value="ViewExample"/>
                <set field="exampleId" from-field="parameters.exampleId"/>
                <entity-one entity-name="Example" value-field="example"/>
                <entity-one entity-name="ExampleType" value-field="exampleType">
                    <field-map field-name="exampleTypeId" from-field="example.exampleTypeId"/>
                </entity-one>
                <entity-one entity-name="StatusItem" value-field="statusItem">
                    <field-map field-name="statusId" from-field="example.statusId"/>
                </entity-one>
                <set field="isAjaxRequest" value="${groovy: 'XMLHttpRequest'.equals(request.getHeader('X-Requested-With'))}" type="Boolean"/>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <if-compare field="isAjaxRequest" operator="equals" value="false" type="Boolean"/>
                    </condition>
                    <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
                            <html><html-template location="component://example/webapp/example/example/ViewExample.ftl"/></html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
                    </widgets>
                    <fail-widgets>
                        <decorator-screen name="ExampleCommonAjaxDecorator" location="${parameters.mainDecoratorLocation}">
                            <decorator-section name="body">
                                <platform-specific>
                                    <html><html-template location="component://example/webapp/example/example/ViewExample.ftl"/></html>
                                </platform-specific>
                            </decorator-section>
                        </decorator-screen>
                    </fail-widgets>
                </section>
            </widgets>
        </section>
    </screen>
    <screen name="AjaxViewExample">
        <section>
            <actions>
                <property-map resource="ExampleUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="exampleId" from-field="parameters.exampleId"/>
                <entity-one entity-name="Example" value-field="example"/>
                <entity-one entity-name="ExampleType" value-field="exampleType">
                    <field-map field-name="exampleTypeId" from-field="example.exampleTypeId"/>
                </entity-one>
                <entity-one entity-name="StatusItem" value-field="statusItem">
                    <field-map field-name="statusId" from-field="example.statusId"/>
                </entity-one>
            </actions>
            <widgets>
                <platform-specific>
                    <html><html-template location="component://example/webapp/example/example/ViewExample.ftl"/></html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
</screens>