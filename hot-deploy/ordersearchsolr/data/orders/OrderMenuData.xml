<entity-engine-xml>

    <Content contentId="MAIN_MENU" description="Main Menus"/>
    <DataResource dataResourceId="ORDER_MENU" dataResourceTypeId="ELECTRONIC_TEXT" mimeTypeId="text/html" dataTemplateTypeId="FTL" dataResourceName="Orders Menu"/>
    <ElectronicText dataResourceId="ORDER_MENU">
        <textData>
            <![CDATA[
              <#if security.hasEntityPermission("OFBTOOLS", "_VIEW", session)>
                  <li class="orders"><a href="#Orders_first">${uiLabelMap.Order}</a></li>
              </#if>
            ]]> 
        </textData>
    </ElectronicText>
    <Content contentId="ORDER_MENU" contentTypeId="APP_BAR_MENU" dataResourceId="ORDER_MENU" mimeTypeId="text/html" contentName="orders"/>
    <ContentAssoc contentId="MAIN_MENU" contentIdTo="ORDER_MENU" mapKey="main_menu" contentAssocTypeId="SUB_CONTENT" fromDate="2006-01-12 01:01:01.000" sequenceNum="05"/>

    <DataResource dataResourceId="ORDER_MAIN_MENU" dataResourceTypeId="ELECTRONIC_TEXT" dataTemplateTypeId="FTL" mimeTypeId="text/html" dataResourceName="Orders Menu"/>
    <ElectronicText dataResourceId="ORDER_MAIN_MENU">
        <textData>
            <![CDATA[
            <#if security.hasEntityPermission("OFBTOOLS", "_VIEW", session)>
              <#assign isNotFavourite><#if preferenceTypes?has_content && preferenceTypes.contains("orders-main")>hide-menu<#else>show-menu</#if></#assign>
              <#assign isFavourite><#if preferenceTypes?has_content && preferenceTypes.contains("orders-main")>show-menu<#else>hide-menu</#if></#assign>
              <form id="orders-main" method="post" name="menu-orders-main">
                <input type="hidden" name="userPrefValue" value="${uiLabelMap.Order}"/>
                <input type="hidden" name="userPrefTypeId" value="orders-main"/>
                <input type="hidden" name="externalLoginKey" value="${(externalLoginKey)!}"/>
              </form>
              <div class="orders-main">
                  <a <#if "Y" == parameters.isFirstMenu!"N">id="Orders_first"</#if> class="orders tile filter-items-menus ${isFavourite}" href="/orders/control/main${(externalKeyParam)!}">
                    <div class="text4">${uiLabelMap.Order}</div>
                    <button type="submit" form="menu-orders-main" class="btn btn-default fa-bg btn-sm abs abs-top abs-right ${isNotFavourite} rgb-fav"
                        data-ajax-update=".orders-main" data-param-source="#orders-main" data-update-url=" 
                      <#if preferenceTypes?has_content && preferenceTypes.contains("orders-main")>removeUserPreference"> <i class="fa fa-star fa-2x"></i><#else>
                          setUserPreference"><i class="fa fa-star-o fa-2x"></i></#if>
                    </button>
                  </a>
                </div>
              </#if>
            ]]> 
        </textData>
    </ElectronicText>
    <Content contentId="ORDER_MAIN_MENU" contentTypeId="NAVIGATION_MENU" dataResourceId="ORDER_MAIN_MENU" mimeTypeId="text/html" contentName="orders-main"/>
    <ContentAssoc contentId="ORDER_MENU" contentIdTo="ORDER_MAIN_MENU" mapKey="sub_menu" contentAssocTypeId="SUB_CONTENT" fromDate="2006-01-12 01:01:01.000" sequenceNum="01"/>

</entity-engine-xml>